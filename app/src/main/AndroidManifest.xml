<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sekar.inventory">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/img_inventory_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/img_inventory_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Inventory">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SecondApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".InputInventoryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SecondApp" />
        <activity
            android:name=".UpdateInventoryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SecondApp" />
    </application>

</manifest>